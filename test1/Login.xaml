<Window x:Class="test1.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test1"
        mc:Ignorable="d"
        Title="Login" Height="538" Width="451" WindowStartupLocation="CenterScreen" HorizontalAlignment="Center" VerticalAlignment="Center" ResizeMode="CanResize" BorderThickness="0,5,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
       >

    <Grid>
        <Grid x:Name="LoginGrid" Background="#FF16163C" Margin="0,-10,0,0">
            <Rectangle Fill="#FF0B0B29" HorizontalAlignment="Left" Height="438" Margin="74,32,0,0" Stroke="#FF181832" VerticalAlignment="Top" Width="294" RadiusX="15.5" RadiusY="15.5" Opacity="0.9"/>
            <Label x:Name="label12" Content="Usuario:" HorizontalAlignment="Left" Margin="120,268,0,0" VerticalAlignment="Top" FontSize="15" Width="71" Foreground="#DDFFFFFF" FontWeight="SemiBold"/>
            <TextBox x:Name="UsernametextBox" HorizontalAlignment="Left" Height="30" Margin="120,298,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199" FontSize="15" CaretBrush="{x:Null}" Foreground="White" BorderBrush="#89FFFFFF"/>
            <Label x:Name="label12_Copy" Content="Contraseña:" HorizontalAlignment="Left" Margin="120,328,0,0" VerticalAlignment="Top" FontSize="15" Width="95" FontWeight="SemiBold" Foreground="#DDFFFFFF"/>
            <PasswordBox x:Name="PasswordtextBox" HorizontalAlignment="Left" Height="30" Margin="120,358,0,0" VerticalAlignment="Top" Width="199" FontSize="15" CaretBrush="{x:Null}" TouchEnter="LoginButton_Click" Foreground="White" BorderBrush="#89FFFFFF"/>
            <Button x:Name="button4" IsDefault="True"  Content="Iniciar Sesión " HorizontalAlignment="Left" Height="28" Margin="159,394,0,0" VerticalAlignment="Top" Width="111" FontSize="14" Background="#FF00AC08" Foreground="#FFF7F7F7" Click="LoginButton_Click" BorderBrush="{x:Null}" Padding="0" FontWeight="Medium" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FlowDirection="RightToLeft"/>
            <Button x:Name="button5" Content="¿Olvidaste tu contraseña?" HorizontalAlignment="Left" Margin="134,422,0,0" VerticalAlignment="Top" Width="160" Height="32" FontSize="12" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF345BB0" Click="ForgotPasswordButton_Click" Padding="0" FontWeight="Normal" FontFamily="Arial"/>
            <Image x:Name="image1" HorizontalAlignment="Left" Height="142" Margin="148,39,0,0" VerticalAlignment="Top" Width="150" Source="1752242249745.png"/>
            <Label x:Name="label" Content="Cuartel de Bomberos&#xD;&#xA;      Voluntarios de&#xD;&#xA;     Coronel Bogado" HorizontalAlignment="Left" Height="94" Margin="120,174,0,0" VerticalAlignment="Top" Width="210" Foreground="#DDFDFBFB" FontSize="20" FontWeight="Bold"/>

        </Grid>
    </Grid>
</Window>
